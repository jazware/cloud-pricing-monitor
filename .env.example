# AWS Configuration
AWS_REGIONS=us-east-1,us-west-2
AWS_INSTANCE_TYPES=m5a.2xlarge,r5a.2xlarge,m6i.2xlarge,r6i.2xlarge

# GCP Configuration
GCP_REGIONS=us-central1,us-east1,europe-west1,us-west4
GCP_INSTANCE_TYPES=n4d-standard-4,c4-standard-4,n4d-highmem-4,c4-highmem-4,n4-standard-4,n4-highmem-4

# Polling Configuration
POLL_INTERVAL=1h

METRICS_LISTEN_ADDRESS=:6015

# AWS Credentials (if not using AWS config file)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_REGION=us-east-1

# GCP Credentials (path to service account key file)
GOOGLE_APPLICATION_CREDENTIALS=/app/gcp-creds.json