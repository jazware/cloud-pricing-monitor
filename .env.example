# AWS Configuration
AWS_REGIONS=us-east-1,us-west-2
AWS_INSTANCE_TYPES=t3.micro,t3.small,m5.large,m5.xlarge

# GCP Configuration
GCP_REGIONS=us-central1,us-east1,europe-west1
GCP_INSTANCE_TYPES=e2-micro,e2-small,n2-standard-2,n2-standard-4

# Polling Configuration
POLL_INTERVAL=1h

# Metrics Server
METRICS_ADDR=:9090

# Logging
LOG_LEVEL=info

# AWS Credentials (if not using AWS config file)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_REGION=us-east-1

# GCP Credentials (path to service account key file)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json